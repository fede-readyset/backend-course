<h1>Desafio Complementario</h1>
<h2>Add new product</h2>
<div>
    <form action="/newproduct" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="upload__container">
            
            <div class="upload__container--title">
                <input type="text" name="title" placeholder="Title">
            </div>
            <div class="upload__container--title">
                <input type="text" name="description" placeholder="Description">
            </div>
            <div class="upload__container--title">
                <input type="text" name="price" placeholder="Price">
            </div>
            <div class="upload__container--title">
                <input type="text" name="thumbnail" placeholder="Thumbnail">
            </div>
            <div class="upload__container--title">
                <input type="text" name="code" placeholder="Code">
            </div>
            <div class="upload__container--title">
                <input type="text" name="category" placeholder="Category">
            </div>
            <div class="upload__container--title">
                Active: 
                <input type="checkbox" name="status" placeholder="Status">
            </div>
            {{!-- <div class="upload__container--title">
                <input type="file" name="image">
            </div> --}}      
            <div class="upload__container--button">
                <button>Save</button>
            </div>

        </div>
    </form>
</div>